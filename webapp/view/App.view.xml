<mvc:View
   controllerName="sap.ui.demo/walkthrough.controller.App"
   xmlns="sap.m"
   xmlns:mvc="sap.ui.core.mvc">
   <!--<Text text="Hello UI5 from XML View, Part 1 where it just shows text"/>-->
   <Button text="{i18n>showHelloButtonText}" press=".onShowHello"></Button> <!--Event is in the controller, the {} is to reference the Properties i18n file-->
   <Input
        value="{/recipient/name}"
        description="Hello {/recipient/name}"
        valueLiveUpdate="true" 
        width="60%"/>
        <!--Real Time Update + Calling JSON File, make sure to set compatVersion in index.html script to edge-->
</mvc:View>